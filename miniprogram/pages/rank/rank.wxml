<cu-custom bgColor="bg-gradual-blue" isBack="{{false}}">
  <view slot="content">排名</view>
</cu-custom>
<swiper class="screen-swiper round-dot" indicator-dots="true" circular="true" autoplay="true" interval="5000" duration="500">
  <swiper-item wx:for="{{1}}" wx:key>
    <image src="https://766f-vote-2gfub75a687652ec-1300875956.tcb.qcloud.la/boot.jpg?sign=bece995c2e591a121d0711eac38df6f5&t=1605184082" mode="aspectFill"></image>
  </swiper-item>
</swiper>
<view class="padding-xl radius shadow bg-white">
  <view style="padding:0 20rpx" class="cu-list menu-avatar" wx:for="{{10}}" wx:key="item" bindtap="toshow" data-id="{{item._id}}">
    <view style="width:100%;height:60rpx;line-height:60rpx;padding-left:20rpx;display:flex;align-items:center;">
      <view style="width:50rpx;height:60rpx;margin-top:5rpx;float:left;margin-right:15rpx;display:flex;align-items:center;">
        <image class=" radius lg" style="width:100%;height:100%;" src="../../images/prize-{{index+1}}.png"  wx:if="{{index <= 2}}"></image>
        <view style="font-size:25px;"  wx:if="{{index > 2}}">
          <text>{{index+1}}</text>
        </view>
      </view>
      <view class="text-pink" style="float:left;">
        <text class="text-cut">平阴县顺成建筑安装有限公司</text>
      </view>
    </view>
    
  <view class="cu-item"style="width:100%;">
    <image class="cu-avatar radius lg" src="https://gimg2.baidu.com/image_search/src=http%3A%2F%2Fpic1.jobui.com%2FcompanyLogo%2F18971%2F14331457823402.jpg%21msq&refer=http%3A%2F%2Fpic1.jobui.com&app=2002&size=f9999,10000&q=a80&n=0&g=0n&fmt=jpeg?sec=1622729121&t=10887d10bdc3964c01f4de524f832b0d"></image>
    <view class="content">
      <view class="text-gray text-sm flex">
        <text class="text-cut">编号：0123号</text>
      </view>
      <view class="text-gray text-sm flex">
        <text class="text-cut">999票</text>
      </view>
    </view>
    <view class="action">
      <!---->
      <view class="cu-tag round bg-red lg">支持+1票</view>
    </view>
  </view>
</view>
</view>
